# Flask Configuration
SECRET_KEY=your-strong-random-secret-key

# Database Configuration
# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql://kobo_bridge_user:your_password@localhost/kobo_bridge_db
# For SQLite (development only):
# DATABASE_URL=sqlite:///kobo_bridge.db

# KoboToolbox Configuration
# Get your API token from: https://your-kobo-server.com/token/
KOBO_API_TOKEN=your-kobo-api-token-here
# Your private KoboToolbox server URL
KOBO_API_HOST=https://your-kobo-server.com

# CompanyCam Configuration
# Get these from your CompanyCam developer app settings
COMPANYCAM_CLIENT_ID=your-companycam-client-id
COMPANYCAM_CLIENT_SECRET=your-companycam-client-secret
# Update this to match your deployed bridge URL
COMPANYCAM_REDIRECT_URI=https://your-bridge-server.com/companycam/callback
